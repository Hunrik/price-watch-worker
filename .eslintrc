{
  "parser": "babel-eslint",
  "extends": [
    "standard"
  ],
  "plugins": [
    "babel",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "semi" : [2, "never"],
    "max-len": [2, 300, 2],
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 1,
  }
}
